<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_table_row"
    android:padding="4dp">

    <!-- Original Word Column -->
    <TextView
        android:id="@+id/originalWordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="4dp"
        android:gravity="start|center_vertical"
        android:maxLines="3"
        tools:text="pistes" />

    <!-- Translated Word Column -->
    <TextView
        android:id="@+id/translatedWordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="4dp"
        android:gravity="start|center_vertical"
        android:maxLines="3"
        tools:text="tracks" />

    <!-- Language Direction Column -->
    <TextView
        android:id="@+id/languageDirectionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="4dp"
        android:gravity="start|center_vertical"
        tools:text="FR > EN" />

    <!-- Date Added Column -->
    <TextView
        android:id="@+id/dateAddedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="4dp"
        android:gravity="start|center_vertical"
        tools:text="2025.03.17" />

    <!-- Delete Button Column -->
    <TextView
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:text="Delete"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_delete_button"
        android:gravity="center"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:textSize="12sp" />

    <!-- Hidden views for compatibility -->
    <TextView
        android:id="@+id/sourceLanguageTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
